{
  "defaultSeverity": "error",
  "extends": [
    "tslint-config-airbnb",
    "tslint-react"
  ],
  "rules": {
    "no-console": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    "typedef": true,
    "import-name": false,
    "max-line-length": [
      true,
      100
    ],
    "space-before-function-paren": false,
    "jsx-boolean-value": [
      false,
      "never"
    ],
    "indent": [true, "spaces", 2],
    "ter-indent": [false, 2],
    "no-unused-variable": true,
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "arrow-parens": false
  }
}