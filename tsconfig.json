{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["es2017"],
    "sourceMap": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2015",
    "moduleResolution": "node",
    "pretty": true,
    "newLine": "LF",
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "rootDir": ".",
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["src/*"],
    },
    "noStrictGenericChecks": true,
    "noImplicitAny": false,
  },
  "exclude": [
    "**/build"
  ]
}