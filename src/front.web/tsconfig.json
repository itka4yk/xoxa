{
  "compilerOptions": {
    "lib": ["dom", "es2018"],
    "types": ["reflect-metadata"],
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceRoot": "./src",
  },
  "exclude": [
    "node_modules"
  ]
}