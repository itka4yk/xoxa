{
  "compilerOptions": {
    "lib": ["dom", "es2018"],
    "types": ["reflect-metadata"],
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    // "strict": true,
    // "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceRoot": "./src",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}